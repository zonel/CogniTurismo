{
  "ConnectionStrings": {
    "ConnectionString": "Host=localhost;Database=telemetry_data;Username=postgres;Password=postgres"
  },
  "MqttSettings": {
    "BrokerAddress": "localhost",
    "Port": 1883,
    "ClientId": "TelemetryIngestionService",
    "Topic": "cars/telemetry",
    "CleanSession": true
  },
  "BufferSettings": {
    "BatchSize": 500,
    "MaxBatchSize": 1000,
    "FlushIntervalMs": 1000,
    "CheckIntervalMs": 200,
    "CopyThreshold": 100
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "TelemetryIngestionService": "Debug"
    }
  },
  "AllowedHosts": "*"
}